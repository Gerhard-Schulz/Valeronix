@using Valeronix.Models.ViewModels;
@model EditModelOfDevice

@{
    ViewData["Title"] = "Изменение";
}

<div class="d-flex justify-content-center">
    <div class="card border-primary mb-3 mt-5">
        <div class="card-header"><h2 class="text-primary text-center">Изменение информации у модели</h2></div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="p-1" for="floatingInput" asp-for="CreatorId"></label>
                    <select asp-for="CreatorId" asp-items="ViewBag.CreatorList" class="form-select">
                        <option selected disabled></option>
                    </select>
                    <span asp-validation-for="CreatorId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="p-1" for="floatingInput" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label class="p-1" for="floatingInput" asp-for="PhotoUrl"></label>
                    <input class="form-control" asp-for="PhotoUrl">
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
                <div class="btn-group btn-group-sm w-100" role="group">
                    <a asp-controller="Creator" asp-action="Index" class="btn btn-sm btn-primary w-100">Вернуться к списку</a>
                    <button type="submit" class="btn btn-sm btn-warning w-100">Изменить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}