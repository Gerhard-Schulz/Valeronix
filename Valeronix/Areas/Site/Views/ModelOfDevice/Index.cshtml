@model IEnumerable<ModelOfDevice>

@{
    ViewData["Title"] = "Модели";
}

<div class="row mt-3">
    <div class="col-4">
        <h2 class="text-center text-primary mt-4">Модельный ряд <a asp-controller="ModelOfDevice" asp-action="Add" class="btn btn-sm btn-outline-primary"><i class="bi bi-plus-lg"></i> Новая модель</a></h2>
    </div>
    <div class="col-8">
        <table class="table table-hover w-100 mt-3 pb-2 cell-centered">
            <tbody class="cell-centered mt-5">
                @foreach (var modelOfDevice in Model)
                {
                    <tr>
                        <td>
                            <h5>@modelOfDevice.Creator.Name</h5>
                        </td>
                        <td>
                            <h5>@modelOfDevice.Name</h5>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm w-100" role="group">
                                <a asp-controller="ModelOfDevice" asp-action="Edit" asp-route-id="@modelOfDevice.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pen"></i> Изменить</a>
                                <a asp-controller="ModelOfDevice" asp-action="Delete" asp-route-id="@modelOfDevice.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
