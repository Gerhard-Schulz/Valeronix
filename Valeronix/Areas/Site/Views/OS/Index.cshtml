@model IEnumerable<OS>

@{
    ViewData["Title"] = "Операционные системы";
}

<div class="row mt-3">
    <div class="col-4 text-center">
        <h2 class="text-primary mt-4">Операционные системы</h2>

        <a asp-controller="OS" asp-action="Add" class="btn btn-sm btn-outline-primary mt-3 w-50"><i class="bi bi-plus-lg"></i> Новая ОС</a>
        <div class="mt-5">
            <form asp-action="Index" method="get">
                <div class="form-actions no-color w-100">
                    <p>
                        <div class="w-100 pb-1" style="font-size: 1.1rem">Поиск:</div>
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="w-50 border-primary" />
                        <button type="submit" class="btn btn-default text-primary"><i class="bi bi-search"></i> Искать</button>
                        <a asp-action="Index" class="btn btn-outline-secondary mt-2"><i class="bi bi-list-ul"></i> Вернуться к полному списку</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    <div class="col-8">
        <table class="table table-hover w-100 mt-3 pb-2 cell-centered">
            <tbody class="cell-centered mt-5">
                @foreach (var os in Model)
                {
                    <tr>
                        <td>
                            <h5>@os.Creator.Name</h5>
                        </td>
                        <td>
                            <h5>@os.Name</h5>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm w-100" role="group">
                                <a asp-controller="OS" asp-action="Edit" asp-route-id="@os.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pen"></i> Изменить</a>
                                <a asp-controller="OS" asp-action="Delete" asp-route-id="@os.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>