@model IEnumerable<Mouse>

@{
    ViewData["Title"] = "Мыши";
}

<h1 class="text-primary text-center">Мыши</h1>
<div class="row pb-3">
    @foreach (var mouse in Model)
    {
        <div class="col-3">
            <div class="row p-2">
                <div class="p-1 col-12">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="~/images/devices/@mouse.ModelOfDevice.PhotoUrl" class="cardcard-img-top rounded" />
                        <div class="card-body p-0">
                            <div class="pl-1">
                                <h3 class="text-center text-black mt-2">@mouse.ModelOfDevice.Creator.Name @mouse.ModelOfDevice.Name</h3>
                                <h5 class="text-center text-dark">Цена: @mouse.Price руб.</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>