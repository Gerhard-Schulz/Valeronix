@model IEnumerable<Keyboard>

@{
    ViewData["Title"] = "Клавиатуры";
}

<h1 class="text-primary text-center">Клавиатуры</h1>
<div class="row pb-3">
    @foreach (var keyboard in Model)
    {
        <div class="col-3">
            <div class="row p-2">
                <div class="p-1 col-12">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="~/images/devices/@keyboard.ModelOfDevice.PhotoUrl" class="cardcard-img-top rounded" />
                        <div class="card-body p-0">
                            <div class="pl-1">
                                <h3 class="text-center text-black mt-2">@keyboard.ModelOfDevice.Creator.Name @keyboard.ModelOfDevice.Name</h3>
                                <div class="text-center text-muted"><span class="text-primary">Тип:</span> @keyboard.TypeOfKeyboard</div>
                                <h5 class="text-center text-dark">Цена: @keyboard.Price руб.</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>