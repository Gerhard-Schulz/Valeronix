@model IEnumerable<Keyboard>

@{
    ViewData["Title"] = "Клавиатуры";
}

<div class="row mt-3">
    <div class="col-3 text-center">
        <h2 class="text-primary mt-4">Клавиатуры <a asp-controller="Keyboard" asp-action="Add" class="btn btn-sm btn-outline-primary mt-3"><i class="bi bi-plus-lg"></i> Новая клавиатура</a>   </h2>
    </div>
    <div class="col-9">
        <table class="table table-hover w-100 mt-3 pb-2 cell-centered">
            <tbody class="cell-centered mt-5">
                @foreach (var keyboard in Model)
                {
                    <tr>
                        <td>
                            <h5>@keyboard.ModelOfDevice.Creator.Name @keyboard.ModelOfDevice.Name</h5>
                        </td>
                        <td>
                            <h5>@keyboard.TypeOfKeyboard</h5>
                        </td>
                        <td>
                            <h5>@keyboard.Price руб.</h5>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm w-100" role="group">
                                <a asp-controller="Keyboard" asp-action="Edit" asp-route-id="@keyboard.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pen"></i> Изменить</a>
                                <a asp-controller="Keyboard" asp-action="Delete" asp-route-id="@keyboard.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
