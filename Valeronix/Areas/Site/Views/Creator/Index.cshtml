@model IEnumerable<Creator>

@{
    ViewData["Title"] = "Производители";
}

<div class="row mt-3">
    <div class="col-4">
        <h2 class="text-center text-primary mt-4">Производители <a asp-controller="Creator" asp-action="Add" class="btn btn-sm btn-outline-primary"><i class="bi bi-plus-lg"></i> Новый производитель</a></h2>
    </div>
    <div class="col-8">
        <table class="table table-hover w-100 mt-3 pb-2 cell-centered">
            <tbody class="cell-centered mt-5">
                @foreach (var creator in Model)
                {
                    <tr>
                        <td>
                            <div class="row">
                                <div class="col-7">
                                    <h5>@creator.Name</h5>
                                </div>
                                <div class="col-5">
                                    <div class="btn-group btn-group-sm w-100" role="group">
                                        <a asp-controller="Creator" asp-action="Edit" asp-route-id="@creator.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pen"></i> Изменить</a>
                                        <a asp-controller="Creator" asp-action="Delete" asp-route-id="@creator.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Удалить</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
