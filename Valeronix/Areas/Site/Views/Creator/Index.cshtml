@model IEnumerable<Creator>

@{
    ViewData["Title"] = "Производители";
}

<div class="row mt-3 w-100">
    <div class="col-4">
        <h2 class="text-center text-primary mt-4">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="link link-primary page-link">Производители</a>
            <a asp-controller="Creator" asp-action="Add" class="btn btn-sm btn-outline-primary"><i class="bi bi-plus-lg"></i> Новый производитель</a>
        </h2>
        <div class="mt-5">
            <form asp-action="Index" method="get">
                <div class="form-actions no-color w-100">
                    <p>
                        <div class="w-100 pb-1" style="font-size: 1.1rem">Поиск:</div>
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="w-50 border-primary" />
                        <button type="submit" class="btn btn-default text-primary"><i class="bi bi-search"></i> Искать</button>
                        <a asp-action="Index" class="btn btn-outline-secondary mt-2"><i class="bi bi-list-ul"></i> Вернуться к полному списку</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
    <div class="col-8">
        <table class="table table-hover w-100 mt-3 pb-2 cell-centered">
            <tbody class="cell-centered mt-5">
                @foreach (var creator in Model)
                {
                    <tr>
                        <td>
                            <div class="row">
                                <div class="col-7">
                                    <h5>@creator.Name</h5>
                                </div>
                                <div class="col-5">
                                    <div class="btn-group btn-group-sm w-100" role="group">
                                        <a asp-controller="Creator" asp-action="Edit" asp-route-id="@creator.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pen"></i> Изменить</a>
                                        <a asp-controller="Creator" asp-action="Delete" asp-route-id="@creator.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Удалить</a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
